alias ls='ls --color=always -lAh'
alias df='df -h'
alias cls='clear'
alias cd..='cd ..'
alias ..='cd ..'

function nmap-init {
	nmap -sV -sC -p- $1 -oN nmap-$1.out
}

function nmap-spec {
	nmap -sV -sC -p $2 $1 -oN nmap-$1-ports.out
}

function gobuster-http {
	gobuster dir -w /usr/wl/dirbuster-m.txt -x txt,php -u http://$1 -o gbdir-$1-http.out
}

function gobuster-https {
	gobuster dir -w /usr/wl/dirbuster-m.txt -x txt,php -u https://$1 -k -o gbdir-$1-https.out
}

function apt-updater {
	sudo apt update &&
	sudo apt dist-upgrade -y &&
	sudo apt autoremove -y &&
	sudo apt autoclean
}
